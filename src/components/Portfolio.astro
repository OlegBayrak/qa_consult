---
import { pillars } from '../data/showcase';
---

<section id="showcase-content" class="relative">
  <div class="section-container">
    <!-- Pillar tabs -->
    <div class="flex flex-wrap gap-3 mb-12 reveal" id="pillar-tabs">
      {pillars.map((pillar, i) => (
        <button
          data-tab={pillar.id}
          class:list={[
            'pillar-tab group flex items-center gap-3 px-6 py-4 rounded-2xl text-left transition-all duration-300 border',
            i === 0
              ? 'bg-accent/10 border-accent/30 text-white'
              : 'bg-white/[0.02] border-white/5 text-gray-400 hover:bg-white/5 hover:border-white/10',
          ]}
        >
          <div class:list={[
            'w-10 h-10 rounded-xl flex items-center justify-center flex-shrink-0 transition-colors',
            i === 0 ? 'bg-accent/20 text-accent' : 'bg-white/5 text-gray-500 group-hover:text-accent group-hover:bg-accent/10',
          ]}>
            <Fragment set:html={pillar.icon} />
          </div>
          <div>
            <span class="font-semibold block">{pillar.label}</span>
            <span class="text-xs text-gray-500 hidden sm:block">{pillar.tagline}</span>
          </div>
        </button>
      ))}
    </div>

    <!-- Pillar content panels -->
    <div id="pillar-panels">
      {pillars.map((pillar, pIdx) => (
        <div
          data-panel={pillar.id}
          class:list={['panel space-y-6', pIdx === 0 ? '' : 'hidden']}
        >
          {pillar.items.map((item, i) => (
            <article
              class="showcase-item glass-card overflow-hidden transition-all duration-300 hover:border-accent/15"
              style={`transition-delay: ${i * 100}ms;`}
            >
              {/* Card header — always visible */}
              <button
                class="showcase-toggle w-full text-left p-6 md:p-8"
                aria-expanded="false"
              >
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1 min-w-0">
                    {/* Tags */}
                    <div class="flex flex-wrap gap-2 mb-3">
                      {item.tags.map((tag) => (
                        <span class="px-2.5 py-0.5 text-xs font-mono bg-accent/5 text-accent/70 rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>

                    {/* Title + subtitle */}
                    <h3 class="text-xl font-bold text-white mb-1">{item.title}</h3>
                    <p class="text-gray-400 text-sm mb-4">{item.subtitle}</p>

                    {/* Impact metric — prominent */}
                    <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-green-500/5 border border-green-500/10 rounded-lg">
                      <svg class="w-4 h-4 text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                      <span class="text-sm text-green-300 font-medium">{item.impact}</span>
                    </div>
                  </div>

                  {/* Expand icon */}
                  <div class="flex flex-col items-center gap-1 pt-2">
                    <svg class="toggle-chevron w-5 h-5 text-gray-500 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                    <span class="text-xs text-gray-600 font-mono">details</span>
                  </div>
                </div>
              </button>

              {/* Expandable deep dive */}
              <div class="showcase-content hidden">
                <div class="px-6 md:px-8 pb-8 border-t border-white/5">
                  {/* Problem → Approach story */}
                  <div class="grid md:grid-cols-2 gap-6 mt-6 mb-8">
                    <div class="p-4 rounded-xl bg-red-500/[0.03] border border-red-500/10">
                      <h4 class="text-red-400 text-xs font-mono uppercase tracking-wider mb-2">The Problem</h4>
                      <p class="text-gray-400 text-sm leading-relaxed">{item.problem}</p>
                    </div>
                    <div class="p-4 rounded-xl bg-accent/[0.03] border border-accent/10">
                      <h4 class="text-accent text-xs font-mono uppercase tracking-wider mb-2">My Approach</h4>
                      <p class="text-gray-400 text-sm leading-relaxed">{item.approach}</p>
                    </div>
                  </div>

                  {/* Sections: code + content */}
                  <div class="space-y-6">
                    {item.sections.map((section) => (
                      <div>
                        <h4 class="text-white font-semibold text-sm mb-3 flex items-center gap-2">
                          <span class="w-1.5 h-1.5 bg-accent rounded-full"></span>
                          {section.heading}
                        </h4>
                        {section.content && (
                          <p class="text-gray-400 text-sm leading-relaxed">{section.content}</p>
                        )}
                        {section.code && (
                          <div class="relative mt-2">
                            <div class="flex items-center justify-between mb-1">
                              <span class="text-xs font-mono text-gray-600">{section.filename}</span>
                              <button class="copy-btn text-xs text-gray-600 hover:text-accent transition-colors font-mono px-2 py-0.5 rounded hover:bg-white/5">
                                copy
                              </button>
                            </div>
                            <pre class="bg-black/50 rounded-xl p-5 overflow-x-auto text-sm leading-relaxed border border-white/5"><code class="text-gray-300 font-mono" set:html={section.code} /></pre>
                          </div>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  // Pillar tab switching
  document.querySelectorAll('.pillar-tab').forEach((btn) => {
    btn.addEventListener('click', () => {
      const tabId = (btn as HTMLElement).dataset.tab!;

      // Update tab styles
      document.querySelectorAll('.pillar-tab').forEach((b) => {
        b.classList.remove('bg-accent/10', 'border-accent/30', 'text-white');
        b.classList.add('bg-white/[0.02]', 'border-white/5', 'text-gray-400');
        b.querySelector('div:first-child')?.classList.remove('bg-accent/20', 'text-accent');
        b.querySelector('div:first-child')?.classList.add('bg-white/5', 'text-gray-500');
      });
      btn.classList.remove('bg-white/[0.02]', 'border-white/5', 'text-gray-400');
      btn.classList.add('bg-accent/10', 'border-accent/30', 'text-white');
      btn.querySelector('div:first-child')?.classList.remove('bg-white/5', 'text-gray-500');
      btn.querySelector('div:first-child')?.classList.add('bg-accent/20', 'text-accent');

      // Show/hide panels
      document.querySelectorAll('.panel').forEach((p) => p.classList.add('hidden'));
      document.querySelector(`[data-panel="${tabId}"]`)?.classList.remove('hidden');
    });
  });

  // Accordion toggle
  document.querySelectorAll('.showcase-toggle').forEach((btn) => {
    btn.addEventListener('click', () => {
      const item = btn.closest('.showcase-item')!;
      const content = item.querySelector('.showcase-content')!;
      const chevron = item.querySelector('.toggle-chevron')!;
      const isOpen = btn.getAttribute('aria-expanded') === 'true';

      btn.setAttribute('aria-expanded', String(!isOpen));
      content.classList.toggle('hidden');
      chevron.classList.toggle('rotate-180');
    });
  });

  // Copy button
  document.querySelectorAll('.copy-btn').forEach((btn) => {
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      const code = btn.closest('.relative')?.querySelector('code')?.textContent || '';
      navigator.clipboard.writeText(code);
      const el = btn as HTMLElement;
      el.textContent = 'copied!';
      setTimeout(() => { el.textContent = 'copy'; }, 2000);
    });
  });
</script>
