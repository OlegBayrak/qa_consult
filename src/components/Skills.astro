  {
    title: 'Languages',
    icon: '{ }',
    skills: ['JavaScript', 'TypeScript', 'SQL', 'Bash', 'Solidity', 'Vyper'],
  },
  {
    title: 'Testing',
    icon: '&#10003;',
    skills: ['Playwright', 'Cypress', 'Cucumber', 'Jest', 'Postman', 'Allure', 'Swagger'],
  },
  {
    title: 'Performance',
    icon: '&#9889;',
    skills: ['K6', 'Prometheus', 'BetterStack', 'Grafana', 'Sentry'],
  },
  {
    title: 'DevOps & CI/CD',
    icon: '&#9881;',
    skills: ['GitHub Actions', 'Docker', 'Jenkins', 'GitHub Workflows'],
  },
  {
    title: 'Databases',
    icon: '&#9744;',
    skills: ['PostgreSQL', 'MySQL', 'Oracle DB'],
  },
  {
    title: 'API & Tools',
