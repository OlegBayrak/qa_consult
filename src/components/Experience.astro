      <div class="space-y-8">
        {jobs.map((job, i) => (
          <div class="relative pl-8 md:pl-20 reveal" style={`transition-delay: ${i * 80}ms;`}>
            <!-- Timeline dot -->
            <div class={`absolute left-0 md:left-8 top-2 w-3 h-3 rounded-full -translate-x-1.5 border-2
              ${job.current ? 'bg-accent border-accent shadow-lg shadow-accent/50' : 'bg-slate-200 dark:bg-surface border-accent/40'}`}>
            </div>

            <div class="glass-card p-6 hover:border-accent/20 transition-all duration-300 group">
              <div class="flex flex-wrap items-start justify-between gap-2 mb-3">
                <div>
                  <h3 class="text-slate-900 dark:text-white font-semibold text-lg group-hover:text-accent transition-colors">
                    {job.role}
                  </h3>
                  <p class="text-accent font-mono text-sm">{job.company}</p>
                </div>
                <span class={`text-xs font-mono px-3 py-1 rounded-full whitespace-nowrap
                  ${job.current ? 'bg-accent/20 text-accent' : 'bg-slate-100 dark:bg-white/5 text-slate-500 dark:text-gray-400'}`}>
                  {job.period}
                </span>
              </div>

              <ul class="space-y-2 mb-4">
                {job.highlights.map((item) => (
                  <li class="text-slate-600 dark:text-gray-400 text-sm flex items-start gap-2">
                    <span class="text-accent/60 mt-1 text-xs">&#9656;</span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>

              <div class="flex flex-wrap gap-2">
                {job.tags.map((tag) => (
                  <span class="px-2 py-0.5 text-xs bg-accent/5 text-accent/70 rounded font-mono">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
