<section id="experience" class="relative">
  <div class="section-container">
    <div class="reveal">
      <p class="section-subtitle">// work experience</p>
      <h2 class="section-title">Where I've Worked</h2>
    </div>

    <div class="relative mt-12">
      <!-- Timeline line -->
