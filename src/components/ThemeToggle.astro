<button
  type="button"
  id="theme-toggle"
  class="theme-toggle p-2 rounded-lg text-slate-500 dark:text-gray-400 hover:text-accent border border-transparent hover:border-accent/30 transition-colors"
  aria-label="Toggle dark mode"
>
  <span class="theme-icon-dark hidden dark:inline-block" aria-hidden="true">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
    </svg>
  </span>
  <span class="theme-icon-light inline-block dark:hidden" aria-hidden="true">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
    </svg>
  </span>
</button>

<script>
  (function () {
    const KEY = 'theme';
    const DARK = 'dark';
    const LIGHT = 'light';

    function getStored() {
      try { return localStorage.getItem(KEY); } catch { return null; }
    }

    function setStored(value) {
      try { localStorage.setItem(KEY, value); } catch {}
    }

    function isDark() {
      const stored = getStored();
      if (stored === DARK) return true;
      if (stored === LIGHT) return false;
      return window.matchMedia('(prefers-color-scheme: dark)').matches;
    }

    function applyTheme(dark) {
      if (dark) document.documentElement.classList.add('dark');
      else document.documentElement.classList.remove('dark');
      setStored(dark ? DARK : LIGHT);
    }

    document.getElementById('theme-toggle')?.addEventListener('click', () => {
      applyTheme(!document.documentElement.classList.contains('dark'));
    });
  })();
</script>
